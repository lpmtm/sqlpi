CREATE TABLE dadosgerais.aluno (
    id_matricula INTEGER PRIMARY KEY,
    nome VARCHAR(100),
	curso VARCHAR(100)
);

CREATE TABLE dadosgerais.habilidades (
    matricula INTEGER REFERENCES dadosgerais.aluno(id_matricula),
    id_habilidades INTEGER PRIMARY KEY,
	nome_habilidade VARCHAR(100)
);


CREATE TABLE dadosgerais.projetos (
    matricula INTEGER REFERENCES dadosgerais.aluno(id_matricula),
    id_projeto INTEGER PRIMARY KEY,
    titulo VARCHAR(100),
    descricao TEXT,
    data_realizacao DATE
);

CREATE TABLE dadosgerais.certificacoes (
    matricula INTEGER REFERENCES dadosgerais.aluno(id_matricula),
    id_cursos INTEGER PRIMARY KEY,
    nome_curso VARCHAR(100),
    instituicao_curso VARCHAR(100),
    data_conclusao DATE
);

CREATE TABLE dadosgerais.certificados (
    matricula INTEGER REFERENCES dadosgerais.aluno(id_matricula),
    id_cursos INTEGER PRIMARY KEY,
    nome_curso VARCHAR(100),
    instituicao_curso VARCHAR(100),
    data_conclusao DATE
);

CREATE TABLE dadosgerais.disciplinas (
    id_disciplina INTEGER PRIMARY KEY,
    nome_disciplina VARCHAR(100)
);

CREATE TABLE dadosgerais.desempenho (
	matricula INTEGER REFERENCES dadosgerais.aluno(id_matricula),
    id_disciplina INTEGER REFERENCES dadosgerais.disciplinas(id_disciplina),
   	id_desempenho INTEGER PRIMARY KEY,
	semestre VARCHAR(25),
	nota FLOAT,
	frequencia FLOAT,
	participacao TEXT
);

CREATE TABLE dadosgerais.curso (
    id_curso INTEGER PRIMARY KEY,
    nome_curso VARCHAR(100),
	descricao_curso TEXT
);

CREATE TABLE dadosgerais.professor (
    id_professor INTEGER PRIMARY KEY,
    nome_professor VARCHAR(100),
	email_professor VARCHAR(100),
	telefone_professor VARCHAR(14)
);

CREATE TABLE dadosgerais.turma (
	id_professor INTEGER REFERENCES dadosgerais.professor(id_professor),
    id_disciplina INTEGER REFERENCES dadosgerais.disciplinas(id_disciplina),
	id_curso INTEGER REFERENCES dadosgerais.curso(id_curso),
   	id_turma INTEGER,
	ano_turma INTEGER,
	semestre_turma INTEGER
);
